@model IEnumerable<Quizzical.Answer>

@{
    ViewBag.Title = "Answers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOption.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Session.Id)
        </th>
        <th>User Id</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOption.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
